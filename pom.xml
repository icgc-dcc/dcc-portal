  <scm>
    <connection>${github.url}</connection>
    <developerConnection>${github.url}</developerConnection>
    <url>${github.url}</url>
  </scm>
  <repositories>
    <repository>
      <id>internal</id>
      <url>http://seqwaremaven.oicr.on.ca/artifactory/dcc-dependencies</url>
    </repository>
    <repository>
      <id>morphia</id>
      <url> http://morphia.googlecode.com/svn/mavenrepo/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <!-- For CDH -->
      <id>cloudera</id>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <!-- For Cascading -->
      <id>conjars.org</id>
      <url>http://conjars.org/repo</url>
